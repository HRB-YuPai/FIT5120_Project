@model FIT5120_Quality_Education_in_Australia_Iterastion_01.Models.WebsiteProtectionVM
@{
    Layout = null;
}

@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")

@if (ViewBag.ErrMsg != null)
{
    <div class="alert alert-danger">@ViewBag.ErrMsg</div>
}

<link type="text/css" rel="stylesheet" href="../../Content/passwordPageCSS.css" />

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>PasswordProtection</title>
    <link href="../../img/favicon.jpg" rel="icon">
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="wrapper">
            <div class="logo">
                <img src="https://dl.yupaiharbin.com/d/%E7%99%BE%E5%BA%A6%E7%BD%91%E7%9B%98/FIT5120WebImageResource/information-icon-6066.png" alt="">
            </div>
            <div class="text-center mt-4 name">
                Please Enter Password
            </div>
            <br/>
            <form class="p-3 mt-3">
                <div class="form-field d-flex align-items-center">
                    <span class="fas fa-key"></span>
                    <input type="password" name="password" id="pwd" placeholder="Password" required>
                </div>
                <input class="btn mt-3" type="submit" value="Submit" />
            </form>
        </div>
    }
</body>
</html>

